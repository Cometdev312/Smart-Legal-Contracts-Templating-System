namespace org.accordproject.conga

/**
 * Defines the data model for the Conga template.
 */
@AccordTemplateModel("conga")
concept TemplateModel {
  o Double amount
  o String swag
  @AccordType("Word __ Word", "{% (d) => {return `${d[0]} ${d[2]}`;} %}")
  --> Participant participant
  o String maybeThing optional
}

/**
 * Defines the input data required by the template
 */
transaction Payup {
  o String[] qualifierTest optional
}

/**
 * Defines the output data for the template
 */
transaction Response {
  o String name
  o Double amount
}